<div class="row">
	<div class="col-xs-4 col-md-2">
		
		<div class="cal-image-holder">
			<div class="date_box">
				<span class="s_day">{s_day}. {s_mon}</span>
				<span class="s_year">{s_year}</span>
				<span class="enddate">{cal_enddate}</span>
			</div>
		</div>
		
	</div>
	<div class="col-xs-8 col-md-10">
		
		
	<span class="showdays">{showdays}</span>
	<a href="{cal_link}"><h2 class="cal_title">{cal_title}</h2></a>
	<div class="cal_text">
		<a class="lightbox" href="{cal_image}"><img src="{cal_image}" alt="" title="" class="cal_image"></a>
		{cal_text}
	</div>
		
		
	<span class="cal_cats">{cal_cats}</span>
	
	
	
	</div>	
</div>